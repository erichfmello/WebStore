@model WebStore.Models.ViewModel.ProductCategoryVM;

@{
    ViewData["Title"] = "Create";
}

<h1>Create product</h1>

<div>
    <form asp-area="" asp-controller="Product" asp-action="Create" asp-route-cpf="@Model.people._cpf">
        <div class="form-row m-12">
            <div class="form-group col-md-4">
                <label asp-for="Title" class="col-md-6"></label>
                <input class="form-control col-md-12" type="text" placeholder="Título do produto:" asp-for="Title">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Description" class="col-md-6"></label>
                <input class="form-control col-md-12" type="text" placeholder="Descrição:" asp-for="Description">
            </div>
        </div>
        <div class="form-row m-12">
            <div class="form-group col-md-4">
                <label asp-for="Price" class="col-md-6"></label>
                <input class="form-control col-md-12" type="text" placeholder="Preço:" asp-for="Price">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="State" class="col-md-6"></label>
                <input class="form-control col-md-12" type="text" placeholder="Estado:" asp-for="State">
            </div>
        </div>
        <div class="form-row m-12">
            <div class="form-group col-md-4">
                <label asp-for="Id" class="col-md-6"></label>
                <select class="form-control" asp-for="Id" asp-items="@(new SelectList(Model.Categories, "_idCategory", "Name"))">Categoria</select>
            </div>
            <div class="form-group col-md-4">
                <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Create" asp-route-cpf="@Model.people._cpf" style="width:130px; margin-top:25px">Nova Categoria</a>
            </div>
        </div>

        <input type="submit" value="Cadastrar" class="btn btn-default" style="width:130px" />
        <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Index" asp-route-cpf="@Model.people._cpf" style="width:130px; margin-left:50px">Cancelar</a>
    </form>
</div>