@model WebStore.Models.ViewModel.ProductCategoryVM;

@{
    ViewData["Title"] = "Index";
}

<h1>Todos os produtos</h1>

<div>
    <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Create" asp-route-cpf="@Model.people._cpf" style="width:130px;">Novo produto</a>
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th width="20px"></th>
                <th>@Html.DisplayNameFor(model => model.Products[0].Title)</th>
                <th>@Html.DisplayNameFor(model => model.Products[0].Price)</th>
                <th>@Html.DisplayNameFor(model => model.Products[0].Category.Name)</th>
                <th width="20px"></th>
            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td width="20px">
                        <a asp-area="" asp-controller="Product" asp-action="Edit"
                           asp-route-cpf="@Model.people._cpf"
                           asp-route-idProduct="@item._idProduct"><i class="fa fa-pencil" style="color:black"></i></a>
                    </td>
                    <td width="20px">@Html.DisplayFor(itemModel => item.Title)</td>
                    <td width="20px">@Html.DisplayFor(itemModel => item.Price)</td>
                    <td width="20px">@Html.DisplayFor(itemModel => item.Category.Name)</td>
                    <td width="20px">
                        <a asp-area="" asp-controller="Product" asp-action="Delete"
                           asp-route-cpf="@Model.people._cpf"
                           asp-route-idProduct="@item._idProduct"><i class="fa fa-trash" style="color:black"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
