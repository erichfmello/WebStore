@model WebStore.Models.ViewModel.ProductCategoryVM;

@{
    ViewData["Title"] = "Buy";
}

<h1>Compra dos itens</h1>

<div>
    <form asp-area="" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-cpf="@Model.people._cpf">
        <input class="form-control col-md-12" type="hidden" asp-for="IdProduct">
        <div class="form-row m-12">
            <div class="form-group col-md-4">
                <label asp-for="Title" class="col-md-6"></label>
                <input class="form-control col-md-12" type="text" placeholder="Título do produto:" asp-for="Title">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Description" class="col-md-6"></label>
                <input class="form-control col-md-12" type="text" placeholder="Descrição:" asp-for="Description">
            </div>
        </div>
        <div class="form-row m-12">
            <div class="form-group col-md-4">
                <label asp-for="Amount" class="col-md-6"></label>
                <input class="form-control col-md-12" type="number" placeholder="Título do produto:" asp-for="Amount">
            </div>
        </div>

        <input type="submit" value="Adicionar" class="btn btn-default" style="width:130px" />
        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index" asp-route-cpf="@Model.people._cpf" style="width:130px; margin-left:50px">Cancelar</a>
    </form>
</div>