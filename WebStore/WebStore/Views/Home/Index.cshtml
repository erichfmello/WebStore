@model WebStore.Models.ViewModel.ProductCategoryVM;
@{
    ViewData["Title"] = "Home Page";
}

<h1>Produtos cadastrados no sistema</h1>

<div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                @if (Model.people._cpf != null)
                {
                    <th width="20px">Comprar</th>
                }
                <th>@Html.DisplayNameFor(model => model.Products[0].Title)</th>
                <th>@Html.DisplayNameFor(model => model.Products[0].Price)</th>
                <th>@Html.DisplayNameFor(model => model.Products[0].Category.Name)</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    @if (Model.people._cpf != null)
                    {
                        <td width="20px">
                            <a asp-area="" asp-controller="Product" asp-action="Buy"
                               asp-route-cpf="@Model.people._cpf"
                               asp-route-idProduct="@item._idProduct"><i class="fa fa-pencil" style="color:black"></i></a>
                        </td>
                    }
                    <td width="20px">@Html.DisplayFor(itemModel => item.Title)</td>
                    <td width="20px">@Html.DisplayFor(itemModel => item.Price)</td>
                    <td width="20px">@Html.DisplayFor(itemModel => item.Category.Name)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
